{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "BaselineModel",
    "args": {
      "n_feats": 128,
      "fc_hidden": 512
    }
  },
  "data": {
    "train": {
      "batch_size": 10,
      "num_workers": 0,
      "datasets": [
        {
          "type": "MixtureDataset",
          "args": {
            "part": "dev-clean",
            "source_dir":"/kaggle/input/librispeech/dev-clean/LibriSpeech/dev-clean",
            "limit": 10,
            "generate_mixture": true,
            "mixture_params": {
              "mixture_init_params": {
                "n_files": 100,
                "test": false
              },
              "mixture_generate_params": {
                "snr_levels": [-5, 5],
                "num_workers": 2,
                "update_steps": 100,
                "trim_db": 20,
                "vad_db": 20,
                "audioLen": 3
              }
            }
          }
        }
      ]
    },
    "val": {
      "batch_size": 10,
      "num_workers": 0,
      "datasets": [
         {
          "type": "MixtureDataset",
          "args": {
            "part": "dev-clean",
            "source_dir":"/kaggle/input/librispeech/dev-clean/LibriSpeech/dev-clean",
            "limit": 10,
            "generate_mixture": true,
            "mixture_params": {
              "mixture_init_params": {
                "n_files": 100,
                "test": true
              },
              "mixture_generate_params": {
                "snr_levels": [-5, 5],
                "num_workers": 2,
                "update_steps": 100,
                "trim_db": false,
                "vad_db": 20,
                "audioLen": 3
              }
            }
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 1e-2
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 51,
      "anneal_strategy": "cos",
      "max_lr": 1e-2,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "ss_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
