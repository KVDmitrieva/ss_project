{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "SpEXModel",
    "args": {
      "n_feats":  1,
      "n_class":  40,
      "speech_out":  32,
      "speaker_dim": 64,
      "padding": [0, 30, 70],
      "filter_lengths": [20, 80, 160],
      "encoder_params": {
        "mid_channels": 32,
        "num_blocks":  1
      },
      "extractor_params": {
        "mid_channels": 32,
        "num_stack":  1,
        "tcn_params": {
          "block_num": 1,
          "mid_channels": 32,
          "kernel_size": 3
        }
      }
    }
  },
  "data": {
    "train": {
      "batch_size": 10,
      "num_workers": 0,
      "datasets": [
        {
          "type": "MixtureDataset",
          "args": {
            "part": "dev-clean",
            "source_dir":"/kaggle/input/librispeech/dev-clean/LibriSpeech/dev-clean",
            "limit": 10,
            "generate_mixture": true,
            "mixture_params": {
              "mixture_init_params": {
                "n_files": 100,
                "test": false
              },
              "mixture_generate_params": {
                "snr_levels": [-5, 5],
                "num_workers": 2,
                "update_steps": 100,
                "trim_db": 20,
                "vad_db": 20,
                "audioLen": 3
              }
            }
          }
        }
      ]
    },
    "val": {
      "batch_size": 10,
      "num_workers": 0,
      "datasets": [
         {
          "type": "MixtureDataset",
          "args": {
            "part": "dev-clean",
            "source_dir":"/kaggle/input/librispeech/dev-clean/LibriSpeech/dev-clean",
            "limit": 10,
            "generate_mixture": false,
            "mixture_params": {
              "mixture_init_params": {
                "n_files": 100,
                "test": true
              },
              "mixture_generate_params": {
                "snr_levels": [-5, 5],
                "num_workers": 2,
                "update_steps": 4,
                "trim_db": false,
                "vad_db": 20,
                "audioLen": 3
              }
            }
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-3,
      "weight_decay": 1e-5
    }
  },
  "loss": {
    "type": "MultiTaskLoss",
    "args": {
      "alphas": [0.1, 0.1],
      "gamma": 0.5
    }
  },
  "metrics": [
    {
      "type": "SISDRMetric",
      "args": {
        "name": "SI-SDR"
      }
    },
    {
      "type": "SDRMetric",
      "args": {
        "name": "SDR"
      }
    },
    {
      "type": "PESQMetric",
      "args": {
        "name": "PESQ"
      }
    },
        {
      "type": "STOIMetric",
      "args": {
        "name": "STOI"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 16,
      "anneal_strategy": "cos",
      "max_lr": 1e-3,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 15,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "ss_project",
    "len_epoch": 100,
    "grad_norm_clip": 15
  }
}
